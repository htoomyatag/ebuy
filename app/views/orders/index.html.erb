<div class="panel panel-default">
  <div class="panel-body">
      <div class="col-md-12">
    <h3>Order listings
    <%= link_to 'MPU', orders_path(:payment_type => "MPU"), :class=>"btn btn-default" %>
    <%= link_to 'Cash on Delivery', orders_path(:payment_type => "CashOnDelivery"), :class=>"btn btn-default"  %>
    <%= link_to 'Bank transfer', orders_path(:payment_type => "BankTransfer"), :class=>"btn btn-default"  %>
    </h3><hr/>

    <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Address</th>
              <th>Township</th>
              <th>City</th>
              <th>Payment</th>
              <th>Order</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.buyer_name %></td>
                <td><%= order.buyer_email %></td>
                <td><%= (order.buyer_phone)+' '+order.buyer_address %></td>
                <td><%= order.buyer_township %></td>
                <td><%= order.buyer_city %></td>
                <td><%= order.payment_type %></td>
                <td><%= order.order_status %></td>
                <td><%= link_to 'Cart', order_path(order),  :class=>"btn btn-success btn-sm" %></td>
                <td><%= link_to 'Edit', edit_order_path(order),  :class=>"btn btn-primary btn-sm" %></td>
                <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger btn-sm" %></td>
              </tr>
            <% end %>
          </tbody>
    </table>

    <br>
    </div>

   

    </div>
</div>

<div class="container">
	<h3 style="text-align:center;">Order form </h3><hr/>



	<%= form_for(@order) do |f| %>
	  <% if @order.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

	      <ul>
	      <% @order.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>


	  <div class="col-md-6">
	
	  	  <h4> Personal Information</h4><hr/>
		  <div class="field">
		    <p>Your Name</p>
		    <%= f.text_field :buyer_name, :class=>"form-control" %>
		  </div><br>
		  <div class="field">
		    <p>Your Email</p>
		    <%= f.text_field :buyer_email, :class=>"form-control" %>
		  </div><br>
		 
		 

		  <div class="field">
		    <p> Requested Delivery Date</p>
		    <%= f.date_field :buyer_email, :class=>"form-control" %>
		  </div><br>



	

	 </div>

	 <div class="col-md-6">
	
	  	  <h4> Delivery Address</h4><hr/>
		  <div class="field">
		     <p>Phone</p>
		    <%= f.text_field :buyer_phone, :class=>"form-control" %>
		  </div><br/>
		 
		  <div class="field">
		    <p> House Number, Street</p>
		    <%= f.text_field :buyer_address, :class=>"form-control" %>
		  </div><br>

		   <div class="field">
		    <p>Township</p>
		    <%= f.text_field :buyer_township, :class=>"form-control" %>
		  </div><br/>

		  <div class="field">
		    <p>Remark</p>
		    <%= f.text_field :buyer_township, :class=>"form-control" %>
		  </div>

	 </div>

	  <div class="col-md-12">

	  	 <div class="actions">
			    <%= f.submit "Submit Payment", :class=>"btn btn-primary btn-lg btn-block"%>
		</div>

	  </div>

	
	
		


<% end %>




</div>


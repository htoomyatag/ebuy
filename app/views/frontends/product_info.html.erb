              type: 'post',
              url: '/line_items',
              dataType: 'text',
              data: {'product_id':product_id, 'product_color':color,'product_size':size, 'delivery_method':delivery_method, 'product_quantity':product_quantity},
              complete: function(r){
              
					location.reload();              	


              }
           });






    });


</script>


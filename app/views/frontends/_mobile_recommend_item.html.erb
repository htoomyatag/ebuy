


		<h4 id="slider_home_title"><%= t('RecommendedItem') %></h4>
		<div class="row" style="padding:10px;text-align:center;">
				  <% @first_recommend_products.each do |product| %>
					                            


							<div class="col-xs-6 col-md-6"  >
						  		

									  <a href="/product_info/<%= product.id %>">
									  	   <%= image_tag(product.avatar1.url, :class=>"img-responsive") %>
									  </a>
									  
									  <div class="panel-heading" id="panel_header">

									    <span id="product_title_mobile">
									    	<%= product.short_title[0...18]+".." %>

									    </span><br/>

									    <span id="product_title_price"> 
									    	 <% round_up(product.discount_price.to_i * @currency_exchange.to_i)  %>
                                             <%= $product_price %> Ks
									     </span>
									  </div>

						
						  	</div>

				<% end %>
		</div>
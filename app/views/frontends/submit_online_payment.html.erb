          </div><br>
         
          <div class="field">
            <p> <b>House No., Street</b></p>
                <%= params[:customer_house] %>
          </div><br>

           <div class="field">
            <p><b>Township</b></p>
               <%= params[:customer_township] %>
          </div><br>


           <div class="field">
            <p><b>City</b></p>
            <%= params[:customer_city] %>
          </div><br>


         
     </div>
      

      <div class="col-md-12">

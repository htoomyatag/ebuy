 <div class="col-md-4"></div>
  <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-body">
                

                    <ul class="nav nav-tabs">
                    <li role="presentation" ><a href="/buyers/sign_up"> <h4>Registration</h4></a></li>
                    <li role="presentation" class="active"><a href="/buyers/sign_in"> <h4>Sign in</h4></a></li>
                  </ul>
                  <br/>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <div class="field">
                          <%= f.email_field :email, autofocus: true, :class=>"form-control", :placeholder => "Enter your email" %>
                        </div><br/>

                        <div class="field">
                          <%= f.password_field :password, autocomplete: "off", :class=>"form-control", :placeholder => "Enter your password" %>
                        </div><br/>

                        <div class="actions">
                          <%= f.submit "Log in", :class=>"btn btn-primary btn-lg btn-block" %>
                        </div>

                         <% if devise_mapping.rememberable? -%>
                          <div class="field">
                            <%= f.check_box :remember_me %>
                            <%= f.label :remember_me %>
                          </div>
                        <% end -%>

                <% end %>



          </div>
        </div>
</div>


